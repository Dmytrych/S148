{
  "kind": "collectionType",
  "collectionName": "products",
  "info": {
    "singularName": "product",
    "pluralName": "products",
    "displayName": "Product",
    "description": ""
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "description": {
      "type": "richtext",
      "required": false
    },
    "name": {
      "type": "string",
      "required": true
    },
    "images": {
      "type": "media",
      "multiple": true,
      "required": true,
      "allowedTypes": [
        "images"
      ]
    },
    "code": {
      "type": "uid",
      "required": true
    },
    "shortDescription": {
      "type": "text",
      "required": true
    },
    "price": {
      "type": "decimal",
      "required": true,
      "min": 0.001
    },
    "characteristics": {
      "displayName": "Characteristics",
      "type": "component",
      "repeatable": true,
      "component": "product-data.characteristics"
    },
    "inStock": {
      "type": "boolean",
      "default": true,
      "required": true
    },
    "titleImage": {
      "allowedTypes": [
        "images",
        "files",
        "videos",
        "audios"
      ],
      "type": "media",
      "multiple": false,
      "required": true
    }
  }
}
